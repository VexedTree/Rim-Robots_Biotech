<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <Operation Class="PatchOperationSequence">		
        <operations>
            <li Class="PatchOperationTest">
                <xpath>/Defs/ThingDef[@Name = "DrugBase"]/modExtensions</xpath>
                <success>Invert</success>
            </li>
            <li Class="PatchOperationAdd">
                <xpath>/Defs/ThingDef[@Name = "DrugBase"]</xpath>
                <value>
                    <modExtensions>
						<li Class="VT_Personae.PersonaItemExtensions">
						    <isPersonaIngestible>false</isPersonaIngestible>
							<isIngestibleByAll>false</isIngestibleByAll>
						</li>					
					</modExtensions>
                </value>
            </li>
        </operations>
    </Operation>
	
    <Operation Class="PatchOperationSequence">		
        <operations>
            <li Class="PatchOperationTest">
                <xpath>/Defs/ThingDef[defName = "Luciferium"]/modExtensions</xpath>
                <success>Invert</success>
            </li>
            <li Class="PatchOperationAdd">
                <xpath>/Defs/ThingDef[defName = "Luciferium"]</xpath>
                <value>
                    <modExtensions Inherit="False">
						<li Class="VT_Personae.PersonaItemExtensions">
							<isIngestibleByAll>true</isIngestibleByAll>
						</li>					
					</modExtensions>
                </value>
            </li>
        </operations>
    </Operation>	

</Patch>