	<!-- Blood -->
	
    <GeneDef ParentName="RRB_Hardware">
		<defName>RRB_SynthBlood</defName>
		<label>synthetic-blood</label>
		<description>Personae with this hardware use synthetic blood to more efficiently carry coolant and bioelectrical currents throughout their circuitry.</description>
		<iconPath>UI/Icons/Genes/SynthBlood</iconPath>
		<displayOrderInCategory>500</displayOrderInCategory>
        <displayCategory>RRB_PersonaCosmetic_Body</displayCategory>		
		<exclusionTags>
		    <li>Blood</li>
			<li>AG_BloodType</li>
			<li>BloodType</li>
		</exclusionTags>
		<selectionWeight>0</selectionWeight>
		<biostatCpx>0</biostatCpx>
		<biostatMet>0</biostatMet>
		<symbolPack>
			<wholeNameSymbols>
			  <li><symbol>synthblood</symbol></li>
			</wholeNameSymbols>
            <prefixSymbols>
              <li><symbol>synth</symbol></li>
			  <li><symbol>plas</symbol></li>
            </prefixSymbols>
            <suffixSymbols>
              <li><symbol>droid</symbol></li>
            </suffixSymbols>
		</symbolPack>
		<modExtensions Inherit="False">
			<li Class="VEF.Genes.GeneExtension">
				<backgroundPathXenogenes>UI/Icons/Genes/Backgrounds/FirmwareBackground</backgroundPathXenogenes>
				<backgroundPathEndogenes>UI/Icons/Genes/Backgrounds/ProgramBackground</backgroundPathEndogenes>
