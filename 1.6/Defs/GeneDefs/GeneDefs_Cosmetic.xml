<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <!-- Frames -->

	<GeneDef>
		<defName>RRB_MechanoidSkinGene</defName>
		<label>mechanoid exoskeleton</label>
		<description>Personae with this hardware have a hard, metallic exoskeleton that makes them appear visually closer to mechanoids than that of their organic counterparts.</description>
		<iconPath>UI/Icons/Genes/Frames/MechExoskeleton</iconPath>
		<displayOrderInCategory>22</displayOrderInCategory>
		<displayCategory>RRB_PersonaCosmetic_Body</displayCategory>
		<biostatCpx>0</biostatCpx>
		<labelShortAdj>mechshell</labelShortAdj>
		<exclusionTags>
			<li>HairStyle</li>
			<li>BeardStyle</li>		
			<li>AG_Bodies</li>
			<li>Bodies</li>
			<li>Body</li>
			<li>Fur</li>
		</exclusionTags>
		<iconColor>(0.75, 0.75, 0.75)</iconColor>
		<biostatCpx>1</biostatCpx>
		<selectionWeight>0</selectionWeight>
		<skinIsHairColor>false</skinIsHairColor>
		<tattoosVisible>false</tattoosVisible>
		<canGenerateInGeneSet>false</canGenerateInGeneSet>
		<fur>RRB_MechanentSkin</fur>
		<renderNodeProperties>
			<li>
				<nodeClass>PawnRenderNode_Fur</nodeClass>
				<workerClass>PawnRenderNodeWorker_Fur</workerClass>
				<baseLayer>5</baseLayer>
				<colorType>Skin</colorType>
				<useSkinShader>true</useSkinShader>	
				<shaderTypeDef>CutoutComplex</shaderTypeDef>				
				<rotDrawMode>Fresh, Rotting</rotDrawMode>
				<parentTagDef>Body</parentTagDef>
			</li>
		</renderNodeProperties>
		<statOffsets>
		    <Flammability>0</Flammability>
            <ArmorRating_Blunt>0.072</ArmorRating_Blunt>
            <ArmorRating_Sharp>0.185</ArmorRating_Sharp>
            <ArmorRating_Heat>2.00</ArmorRating_Heat>	 
    	</statOffsets>		
		<forcedHeadTypes>
            <li>None_Basic</li>
            <li>None_Labor</li>
            <li>None_Logic</li>	  
            <li>None_Medic</li>	  
            <li>None_Recon</li>
            <li>None_Ghost</li> 
      	    <li>None_Combat</li> 
      	    <li>None_Hakita</li>	
            <li>None_Bipede</li>
      	    <li>None_Legion</li>	
            <li>None_Scyther</li>	  	  
      	    <li>None_Drifter</li>
            <li>None_Nuclear</li>
        	<li>None_Slasher</li>
            <li>None_Penitent</li>
            <li>None_Socialist</li>
            <li>None_Wayfinder</li>
		</forcedHeadTypes>
        <hairTagFilter>
            <whitelist>true</whitelist>
            <tags>
                <li>Bald</li>
            </tags>
        </hairTagFilter>
        <beardTagFilter>
            <whitelist>true</whitelist>
            <tags>
                <li>NoBeard</li>
            </tags>
        </beardTagFilter>			
		<modExtensions>
			<li Class="VEF.Genes.GeneExtension">
				<backgroundPathXenogenes>UI/Icons/Genes/Backgrounds/FirmwareBackground</backgroundPathXenogenes>
				<backgroundPathEndogenes>UI/Icons/Genes/Backgrounds/ProgramBackground</backgroundPathEndogenes>			
				<hediffToWholeBody>PersonaShader_Hediff</hediffToWholeBody>		
				<useSkinColorForFur>true</useSkinColorForFur>
				<useMaskForFur>true</useMaskForFur>
				<furHidesBody>true</furHidesBody>			
			</li>
			<li Class="VT_Personae.PersonaGeneExtensions">
				<metalhorrorTargetable>false</metalhorrorTargetable>
			</li>				
		</modExtensions>
	</GeneDef>
	
