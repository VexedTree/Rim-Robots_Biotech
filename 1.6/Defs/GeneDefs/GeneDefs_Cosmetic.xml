	<!-- Voices -->
	
    <GeneDef  ParentName="RRB_Hardware" Name="RRB_VoiceBase" Abstract="True">
        <biostatCpx>0</biostatCpx>
        <iconColor>(0.75, 0.75, 0.75)</iconColor>
        <randomChosen>true</randomChosen>
		<displayCategory>RRB_PersonaCosmetic_Body</displayCategory>
        <exclusionTags>
            <li>Voice</li>
        </exclusionTags>
    </GeneDef>

    <GeneDef ParentName="RRB_VoiceBase">
        <defName>RRB_Voice_Human</defName>
        <label>human voice</label>
        <description>Personae with this hardware use nuanced speech patterns to sound near perfectly human.</description>
        <iconPath>UI/Icons/Genes/Gene_VoiceHuman</iconPath>
        <displayOrderInCategory>120</displayOrderInCategory>
    </GeneDef>

    <GeneDef ParentName="RRB_VoiceBase">
        <defName>RRB_Voice_Mechanoid</defName>
        <label>mechanoid voice</label>
        <description>Personae with this hardware have a chirping, droning voice like that of a mechanoid.</description>
        <iconPath>UI/Icons/Genes/MechanoidVoice</iconPath>
        <displayOrderInCategory>125</displayOrderInCategory>
        <soundCall>Pawn_Mech_Fabricor_Call</soundCall>
        <soundDeath>Pawn_Mech_Fabricor_Death</soundDeath>
        <soundWounded>Pawn_Mech_Fabricor_Wounded</soundWounded>
        <symbolPack>
            <wholeNameSymbols>
                <li><symbol>screecher</symbol></li>
                <li><symbol>shriller</symbol></li>
                <li><symbol>chirper</symbol></li>
                <li><symbol>droner</symbol></li>
            </wholeNameSymbols>
            <prefixSymbols>
                <li><symbol>screech</symbol></li>
                <li><symbol>chirp</symbol></li>
                <li><symbol>drone</symbol></li>
            </prefixSymbols>
            <suffixSymbols>
                <li><symbol>screech</symbol></li>
                <li><symbol>chirp</symbol></li>
                <li><symbol>shrill</symbol></li>
            </suffixSymbols>
        </symbolPack>
    </GeneDef>	
	
    <GeneDef ParentName="RRB_VoiceBase">
        <defName>RRB_Voice_Construct</defName>
        <label>construct voice</label>
        <description>Personae with this hardware use crackly, static-filled voice emulators - sounding similar to the audio feed of a radio.</description>
        <iconPath>UI/Icons/Genes/ConstructVoice</iconPath>
        <displayOrderInCategory>130</displayOrderInCategory>
		<soundCall>Hacking_Started</soundCall>
        <soundDeath>Hacking_Suspended</soundDeath>
        <soundWounded>MechBandShockwave</soundWounded>
        <symbolPack>
            <wholeNameSymbols>
                <li><symbol>metallic</symbol></li>
                <li><symbol>constructor</symbol></li>
                <li><symbol>scrapper</symbol></li>
            </wholeNameSymbols>
            <prefixSymbols>
                <li><symbol>metal</symbol></li>
                <li><symbol>constr</symbol></li>
                <li><symbol>slag</symbol></li>
                <li><symbol>scrap</symbol></li>
            </prefixSymbols>
            <suffixSymbols>
                <li><symbol>metallic</symbol></li>
                <li><symbol>metal</symbol></li>
                <li><symbol>slag</symbol></li>
                <li><symbol>scrapper</symbol></li>
            </suffixSymbols>
        </symbolPack>
    </GeneDef>	
	
