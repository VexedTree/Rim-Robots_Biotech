    <!-- Special --> 

  <GeneDef ParentName="RRB_Archite">
	<defName>RRB_ResurrectionPersona</defName>
	<label>mechanoid resurrection</label>
	<description>Personae with this hardware can channel and supercharge the self-repair processes of dead mechanoids. Though not without cost, this process requires briefly splintering the personae' consciousness with the target, and with each consecutive resurrection if not given enough time to recover, the persona may fly into a blind fit of rage and hatred.</description>
	<iconPath>UI/Icons/Genes/Resurrection</iconPath>
	<displayOrderInCategory>1</displayOrderInCategory>
    <displayCategory>RRB_PersonaAbility</displayCategory>			
    <biostatCpx>3</biostatCpx>
    <biostatArc>2</biostatArc>		
	<abilities>
	  <li>RRB_ResurrectionPersona</li>
	</abilities>
	<descriptionHyperlinks>
	  <AbilityDef>RRB_ResurrectionPersona</AbilityDef>
	</descriptionHyperlinks>
	<symbolPack>
	  <prefixSymbols>
		<li><symbol>apoc</symbol></li>
		<li><symbol>necro</symbol></li>
		<li><symbol>ress</symbol></li>
		<li><symbol>mechno</symbol></li>
	  </prefixSymbols>
	  <suffixSymbols>
		<li><symbol>riton</symbol></li>
		<li><symbol>mancer</symbol></li>
	  </suffixSymbols>
	</symbolPack>
  </GeneDef>
  
