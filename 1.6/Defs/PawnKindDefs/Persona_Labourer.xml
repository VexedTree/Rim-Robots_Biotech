<Defs>

  <!-- Miners -->

  <PawnKindDef ParentName="OutlanderBase" MayRequire="Ludeon.RimWorld.Ideology">
    <defName>Mechanent_Miner</defName>
    <label>mechanent miner</label>
    <combatPower>55</combatPower>
    <apparelIgnoreSeasons>true</apparelIgnoreSeasons>
    <apparelIgnorePollution>true</apparelIgnorePollution>		
	<backstoryFiltersOverride Inherit="False">
      <li>
        <categories>	
            <li>BackstoriesSubpersona</li>
        </categories>
      </li>	  
    </backstoryFiltersOverride>	
    <xenotypeSet Inherit="False">
      <xenotypeChances>
        <RRB_Mechanent>999</RRB_Mechanent>
      </xenotypeChances>
    </xenotypeSet>	
    <itemQuality>Poor</itemQuality>
    <isFighter>false</isFighter>
    <gearHealthRange>0.2~2.0</gearHealthRange>
    <weaponTags>
      <li>Gun</li>
      <li>MedievalMeleeBasic</li>
    </weaponTags>
    <weaponMoney>65~125</weaponMoney>
    <apparelMoney>200~400</apparelMoney>
    <apparelAllowHeadgearChance>0.4</apparelAllowHeadgearChance>
    <techHediffsMoney>1000~1000</techHediffsMoney>
    <techHediffsTags>
      <li>DrillArm</li>
	  <li>ConsciousnessBolt</li>
    </techHediffsTags>
    <techHediffsChance>0.8</techHediffsChance>
    <techHediffsMaxAmount>1</techHediffsMaxAmount>
    <initialWillRange>1~2</initialWillRange>
    <initialResistanceRange>10~17</initialResistanceRange>
  </PawnKindDef>

